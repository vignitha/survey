<html>
<head>
<h1>Edit Question</h1>
 <%= form_for :question, url: { action: :update, id: @question },
method: :put do |f| %>
  
  <p>
    <%= f.label :Question  %><br>
    <%= f.text_field :qus_text  %>
  </p> 
  <p>
    <%= f.label :Type %><br>
    <%= f.select :qus_type, options_for_select([['Essay Question'],'Numeric Question','Date Question']), :prompt => "Choose One"  %>
  </p> 
  
  <p>
    <%= f.submit "Save" %>
   </p>
 <% end %>

</head>
</html>
