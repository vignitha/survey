<h1>Edit user</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <table><tr>
      <td><%= f.submit "Update" %><br /></td>
      <td><%= link_to "Delete this account", @user, 
                      :method => :delete,
                      :confirm => "This operation cannot be undone. " +
                                  "Are you sure?",
                      :title => "Delete #{@user.name}" %>
    </tr></table>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <a href="http://gravatar.com/emails" target="_blank">change</a>
</div>
