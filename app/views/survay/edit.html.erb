<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    <script src="http://code.jquery.com/jquery-1.8.3.js"></script>
    <script src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css" />
    <script>
    $(function() {
         $( "#datepicker" ).datepicker({
            showOn: "button",
            buttonImage: "/images/calendar.gif",
            buttonImageOnly: true, 
            dateFormat: 'dd-mm-yy'
        });
    });
    </script>
</head>
<body>
<h1>Edit Survey</h1>
 <%= form_for :survay, url: { action: :update, id: @survey },
method: :put do |f| %>
  
  <p>
    <%= f.label :Title  %><br>
    <%= f.text_field :survey_name, :hint => "Field hint" %>
  </p> 
  <p>
    <%= f.label :Description  %><br>
    <%= f.text_area :survey_description, :style => 'width: 350px;height:100px;'  %>
  </p> 
  <p>
    Created:<%= f.text_field :Created, :id => :datepicker, :style => 'width: 200px;' %>
  </p> 
  <p>
    <%= f.submit "Save" %>
    <%= link_to "Back", index_path %>
  </p>
 <% end %>
</body>
</html>
